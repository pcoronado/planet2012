<div id="site">
 
  <h1><%= @site.type.name if @site.type %></h1> 

  <%= image_tag(@site.image.url, :class => 'site_image') %>

  <h3><%= @site.name %></h3> 

  <p><%=sanitize @site.description %></p>

  <p><b>Autor:</b> 
          <%= @site.user.name if @site.user %></p>

	<h2>Comments</h2>
	<%= render @site.comments%>
</div>
	<h2>Añade un comentario:</h2>(240 caracteres max)
<% if current_user %>
	<%= render "comments/form"%>
<% else %>
	<h3> Para añadir un comentario debe estar registrado</h3>
<% end %>
	<div class="visitas">
 	 <b>Visitas:</b>  <%= @site.visitas %>
	</div>


<% if @site.user == current_user %>
  <%= link_to 'Edit', edit_site_path(@site) %> |
<% end %>
<%= link_to 'Back', sites_path %>
